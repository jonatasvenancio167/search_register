<h1>Login</h1>

<%= form_tag sessions_path do %>
  <div class="form-group">
    <div class='row'>
      <div class='col-md-6'>
        <%= label_tag :email %>
        <%= text_field_tag :email, nil, class: 'form-control' %>
      </div>
      <div class='col-md-6'>
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
    </div>
    <%= submit_tag 'login', class: 'btn btn-primary mt-3' %>
  </div>
<% end %>
