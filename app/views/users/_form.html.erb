<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class='form-control'>
    <div class='row'>
      <div class='col-md-4'>
        <%= form.label I18n.t('users.attributes.name'), style: "display: block" %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class='col-md-4'>
        <%= form.label I18n.t('users.attributes.telephone'), style: "display: block" %>
        <%= form.text_field :telephone, class: 'form-control' %>
      </div>

      <div class='col-md-4'>
        <%= form.label I18n.t('users.attributes.email'), style: "display: block" %>
        <%= form.text_field :email, class: 'form-control' %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-3'>
        <%= form.label I18n.t('users.attributes.password'), style: "display: block" %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>
      <div class='col-md-3'>
        <%= form.label I18n.t('users.attributes.password_confirmation'), style: "display: block" %>
        <%= form.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class='col-md-3'>
        <%= form.label I18n.t('users.attributes.biography'), style: "display: block" %>
        <%= form.text_field :biography, class: 'form-control' %>
      </div>
      <div class='col-md-3'>
        <%= form.label I18n.t('users.attributes.birthdate'), style: "display: block" %>
        <%= form.date_field :birthdate, class: 'form-control' %>
      </div>
    <div>
    <div class='mt-2'>
      <%= form.submit I18n.t('users.submit'), class: 'btn btn-primary' %>
      <%= link_to I18n.t('users.back'), users_path, class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
